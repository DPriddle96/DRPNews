<resources>
    <!-- Base application theme. -->
    <style name="Theme.DRPNews" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Add some font themes -->
    <style name="article_title_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="article_source_name_text">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="article_detail_title_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="article_detail_source_name_text">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="article_url_text">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
</resources>